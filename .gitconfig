[user]
  name = Alex Lance
  email = code@alexlance.com

[color]
  ui = auto

[core]
  excludesfile = ~/.gitignore
  pager = less -XF

[alias]
  record = ! sh -c '(git add -p -- $@ && git commit) || git reset' --
  st = status -sb
  co = checkout
  b = branch -v
  l = log --oneline -20 --format=format:'%ad %Cgreen%h %Cred%an %Creset%s' --date=short
  ll = log --oneline --format=format:'%ad %Cgreen%h %Cred%an %Creset%s' --date=short
  alla = log --oneline --format=format:'%ad %Cgreen%h %Cred%an %Creset%s' --author=alla --date=short
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  pullr = pull --rebase
  pp = ! sh -c '(git pull --rebase && git push)'
  pps = ! sh -c '(git stash && git pull --rebase && git push && git stash pop)'
  ps = ! sh -c '(git stash && git pull --rebase && git stash pop)'
  pr = ! sh -c '(git push origin $(git symbolic-ref --short -q HEAD) && hub pull-request)'
[filter "noeol"]
  clean = noeol_filter
  smudge = cat

[interactive]
  singlekey = true
[push]
	default = current
[pull]
	default = current
  rebase = true

[branch]
    autosetuprebase = always
