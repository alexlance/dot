escape C-space
startup_message off
echo Welcome!

set border 0
set barpadding 8 8
set bargravity n
set inputwidth 500

exec xterm -class UXTerm -title uxterm -u8

bind left focusleft
bind right focusright
bind up focusup
bind down focusdown
bind x exec xtrlock -b
bind c exec xterm -class UXTerm -title uxterm -u8
definekey top M-1 prev
definekey top M-2 next
definekey top M-3 nextscreen
definekey top M-Tab focusprev
definekey top M-F2 exec
definekey top M-4 exec ratpoison -c "swap 1"
definekey top C-Tab focusprev

exec rpws init 3 -a
definekey top C-M-Left rpwsp
definekey top C-M-Right rpwsn

definekey top C-M-BackSpace quit
definekey top Pause exec bash /home/alla/bin/mute.sh
definekey top XF86Tools exec bash /home/alla/bin/mute.sh
definekey top Print exec bash /home/alla/bin/screenshot.sh

definekey top XF86AudioMedia exec bash /home/alla/bin/mute.sh
definekey top XF86HomePage exec bash /home/alla/bin/heater.sh
definekey top Scroll_Lock exec bash /home/alla/bin/heater.sh

definekey top F1 exec sudo /home/alla/bin/brightness.sh down
definekey top F2 exec sudo /home/alla/bin/brightness.sh up
definekey top F5 exec sudo /home/alla/bin/leds_keyboard.sh down
definekey top F6 exec sudo /home/alla/bin/leds_keyboard.sh up

definekey top F10 exec sh /home/alla/bin/mute_leaf.sh
definekey top F11 exec sh /home/alla/bin/volume.sh down
definekey top F12 exec sh /home/alla/bin/volume.sh up
